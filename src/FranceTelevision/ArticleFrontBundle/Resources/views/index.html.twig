{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des articles</h1>
    <a href='{{ path('add_article') }}'>Ajouter un article</a>
    {% for article in articles %}
        <div>
            <h3>{{ article.title }} [ par {{ article.created_by ~ '  le '~ article.created_at|date('d/m/Y') }}]</h3>
            <p>{{ article.leading }}</p>
            <a href="{{ path('get_article', {'slug': article.slug}) }}">Lire la suite</a>
        </div>
    {% endfor %}
{% endblock %}
